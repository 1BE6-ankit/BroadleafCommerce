<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
	
	<persistence-unit name="blSandboxPU" transaction-type="RESOURCE_LOCAL">
		<mapping-file>config/bc/jpa/domain/sandbox/Category_Sandbox.orm.xml</mapping-file>
		<mapping-file>config/bc/jpa/domain/sandbox/CategoryXref_Sandbox.orm.xml</mapping-file>
		<mapping-file>config/bc/jpa/domain/sandbox/Product_Sandbox.orm.xml</mapping-file>
		<mapping-file>config/bc/jpa/domain/sandbox/Sku_Sandbox.orm.xml</mapping-file>
        <class>org.broadleafcommerce.core.catalog.domain.sandbox.SandBoxCategoryImpl</class>
        <class>org.broadleafcommerce.core.catalog.domain.sandbox.SandBoxCategoryXref</class>
        <class>org.broadleafcommerce.core.catalog.domain.sandbox.SandBoxProductImpl</class>
        <class>org.broadleafcommerce.core.media.domain.sandbox.SandBoxMediaImpl</class>
        <class>org.broadleafcommerce.core.catalog.domain.sandbox.SandBoxFeaturedProductImpl</class>
        <class>org.broadleafcommerce.core.catalog.domain.sandbox.SandBoxProductSkuImpl</class>
        <class>org.broadleafcommerce.core.catalog.domain.sandbox.SandBoxSkuImpl</class>
        <exclude-unlisted-classes/>
        <properties>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.transaction.flush_before_completion" value="false"/>
            <property name="hibernate.connection.autocommit" value="false"/>
            <property name="hibernate.cache.region.factory_class" value="net.sf.ehcache.hibernate.SingletonEhCacheRegionFactory"/>
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.use_query_cache" value="true"/>
            <property name="hibernate.generate_statistics" value="false" />
            <property name="hibernate.archive.autodetection" value="false" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
        </properties>
	</persistence-unit>

</persistence>