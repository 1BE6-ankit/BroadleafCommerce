<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

    <context:component-scan base-package="com.broadleafcommerce.customfield" />

    <bean id="blMergedPersistenceXmlLocations" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <value>classpath*:/META-INF/persistence-custom-field.xml</value>
            </list>
        </property>
    </bean>

    <bean id="blMergedEntityContexts" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <value>classpath:bl-custom-field-applicationContext-entity.xml</value>
            </list>
        </property>
    </bean>
    
    <!--
        These beans are responsible for contributing functionality to the multitenant module. They are dormant
        unless the multitenant module is loaded
     -->
    <bean class="org.broadleafcommerce.common.extensibility.context.merge.LateStageMergeBeanPostProcessor">
        <property name="collectionRef" value="blCustomFieldSiteConfigProviders"/>
        <property name="targetRef" value="blMultiTenantSiteConfigProviders"/>
        <property name="statusProvider" ref="blMultiTenantMergeBeanStatusProvider"/>
    </bean>

    <bean id="blCustomFieldSiteConfigProviders" class="org.springframework.beans.factory.config.ListFactoryBean" lazy-init="true">
        <property name="sourceList">
            <list>
                <bean id="blCustomFieldSiteConfigProvider" class="com.broadleafcommerce.customfield.service.provider.CustomFieldSiteConfigProvider" />
            </list>
        </property>
    </bean>
    <!--
        End of multitenant module support
    -->

</beans>
